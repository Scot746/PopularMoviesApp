<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tVHeader"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="@color/colorPrimary"
        android:ellipsize="marquee"
        android:lines="1"
        android:marqueeRepeatLimit="marquee_forever"
        android:padding="@dimen/default_medium_size"
        android:paddingLeft="@dimen/default_medium_size"
        android:paddingRight="@dimen/default_medium_size"
        android:paddingTop="@dimen/default_medium_size"
        android:scrollbars="horizontal"
        android:textColor="@android:color/white"
        android:textSize="@dimen/frg_detail_title_size" />

    <TextView
        android:id="@+id/tVItemHeaderMessage"
        style="@style/TextViewTitle"
        android:layout_margin="@dimen/default_medium_size"
        android:gravity="center" />


</LinearLayout>

